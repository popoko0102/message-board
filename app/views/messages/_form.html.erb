<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>

<!-- エラーメッセージ -->
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<!-- /エラーメッセージ -->

  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前</label>
      <div class="col-sm-11">
        <%= f.text_field :name, class: 'form-control', placeholder: '名前を入力' %>
        <!--<input type="email" class="form-control" id="message_name" placeholder="名前を入力">-->
      </div>
  </div>

  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容</label>
      <div class="col-sm-11">
       <%= f.text_area :body, class: 'form-control', placeholder: 'コメントを入力してください' %>
       <!--<input type="password" class="form-control" id="inputPassword3" placeholder="Password"> -->
      </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
      <!-- <button type="submit" class="btn btn-default">Sign in</button> -->
    </div>
  </div>

<% end %>